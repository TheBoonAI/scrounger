{
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "NODE_OPTIONS='--max-http-header-size=2097152' next dev",
    "lint": "eslint '{pages,src}/**/*.js'",
    "start": "next start",
    "test": "jest --watch --notify --verbose --no-cache",
    "test:cover": "jest --coverage --verbose --no-cache"
  },
  "dependencies": {
    "@cep/csinterface": "10.0.1",
    "autoprefixer": "10.2.6",
    "next": "10.2.3",
    "postcss": "8.3.5",
    "prop-types": "15.7.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-error-boundary": "3.1.3",
    "react-responsive-modal": "6.1.0",
    "react-use-clipboard": "1.0.7",
    "swr": "0.5.6",
    "tailwindcss": "2.2.2"
  },
  "devDependencies": {
    "@testing-library/react": "11.2.7",
    "eslint": "7.30.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "jest": "27.0.5",
    "jest-fetch-mock": "3.0.3",
    "prettier": "2.3.1"
  },
  "postcss": {
    "plugins": [
      "tailwindcss"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "jest": true
    },
    "extends": [
      "airbnb",
      "airbnb/hooks",
      "prettier"
    ],
    "rules": {
      "arrow-body-style": "off",
      "react/forbid-prop-types": "off",
      "react/require-default-props": "off",
      "react/jsx-filename-extension": "off",
      "react/jsx-props-no-spreading": "off",
      "react/react-in-jsx-scope": "off",
      "jsx-a11y/label-has-associated-control": "off",
      "jsx-a11y/label-has-for": "off",
      "jsx-a11y/media-has-caption": "off"
    },
    "overrides": [
      {
        "files": [
          "**/helpers.js"
        ],
        "rules": {
          "import/prefer-default-export": "off"
        }
      },
      {
        "files": [
          "**/__tests__/**/*.spec.js",
          "**/__mocks__/**/*.js"
        ],
        "rules": {
          "global-require": "off",
          "no-underscore-dangle": "off"
        }
      }
    ]
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "always",
    "proseWrap": "always"
  },
  "babel": {
    "presets": [
      "next/babel"
    ]
  },
  "jest": {
    "setupFiles": [
      "./jest.setup.js"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/.*/__mocks__"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  }
}
